<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Admin HomePage</title>
        <link rel="stylesheet" href="/abc/css/admin.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
    </head>
    <body>

        <!--wrapper start-->
        <div class="wrapper">
            <!--header menu start-->
            <div class="header">
                <div class="header-menu">
                    <div class="title">Admin <span>Home</span></div>
                    <div class="sidebar-btn">
                        <i class="fas fa-bars"></i>
                    </div>
                    <ul>
                        <h1 style="color:white;">LogOut</h1>
                        <li><a href="/logout"><i class="fas fa-power-off"></i></a></li>
                    </ul>
                </div>
            </div>
            <!--header menu end-->
            <!--sidebar start-->
            <div class="sidebar">
                <div class="sidebar-menu">
                    <center class="profile">
                        <img src="/abc/css/admin.png" class="profile_image" alt="">
                        <p> Welcome, <%= name %></p>
                    </center>
                    <li class="item">
                        <a href="#" class="menu-btn">
                            <i class="fas fa-desktop"></i><span>Dashboard</span>
                        </a>
                    </li>
                    <li class="item">
                        <a href="/user/edit" class="menu-btn">
                            <i class="fas fa-user-circle"></i><span>My Profile</span>
                        </a>
                    </li>
                    <li class="item" id="profile">
                        <a href="#profile" class="menu-btn">
                            <i class="fas fa-book"></i><span>Book <i class="fas fa-chevron-down drop-down"></i></span>
                        </a>
                        <div class="sub-menu">
                            <a href="/emanagement"><i class="fas fa-list"></i><span>Add Book </span></a>
                            <a href="/books"><i class="far fa-money-bill-alt"></i><span>Book List</span></a>
                        </div>
                    </li>
                    
                    <li class="item" id="settings">
                        <a href="#settings" class="menu-btn">
                            <i class="fas fa-user-friends"></i><span>Customer <i class="fas fa-chevron-down drop-down"></i></span>
                        </a>
                        <div class="sub-menu">
                            <a href="/userlist"><i class="fas fa-lock"></i><span>Add Customer</span></a>
                            <a href="pdfmake"><i class="far fa-flag"></i><span>Customer report</span></a>
                        </div>
                    </li>
                    
                    <li class="item">
                        <a href="/mail" class="menu-btn">
                            <i class="far fa-address-book"></i><span>Contact</span>
                        </a>
                    </li>
                </div>
            </div>
            <!--sidebar end-->
            <!--main container start-->
            <div class="main-container">
                <div class="card">
                    <p>This is Admin Page</p>
                </div>
                <div class="card">
                    <p></p>
                </div>
                <div class="card">
                    <p></p>
                </div>
            </div>
            <!--main container end-->
        </div>
        <!--wrapper end-->

        <script type="text/javascript">
        $(document).ready(function(){
            $(".sidebar-btn").click(function(){
                $(".wrapper").toggleClass("collapse");
            });
        });
        </script>

    </body>
</html>
